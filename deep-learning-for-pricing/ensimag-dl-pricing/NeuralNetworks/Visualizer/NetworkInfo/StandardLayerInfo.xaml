<UserControl x:Class="Visualizer.NetworkInfo.StandardLayerInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Visualizer.NetworkInfo"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="Gray">
            <StackPanel Margin="5">
                <TextBlock FontWeight="Bold">
                    <Run Text="Layer " />
                    <Run Text="{Binding LayerPosition, Mode=OneWay}" />
                </TextBlock>
                <TextBlock>
                    <Run Text="Input size: " />
                    <Run Text="{Binding InputSize, Mode=OneWay}" />
                </TextBlock>
                <TextBlock>
                    <Run Text="Layer size: " />
                    <Run Text="{Binding LayerSize, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>